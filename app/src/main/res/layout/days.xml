<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Switch
        android:id="@+id/switch_all_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todos los dias"
        android:layout_gravity="right"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f6f6f6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cancel"/>
            <Switch
                android:id="@+id/switch_day1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunes"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cancel"/>
            <Switch
                android:id="@+id/switch_day2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Martes"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_view_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cancel"/>
            <Switch
                android:id="@+id/switch_day3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miercoles"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cancel"/>
            <Switch
                android:id="@+id/switch_day4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jueves"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_view_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cancel"/>
            <Switch
                android:id="@+id/switch_day5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viernes"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_view_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cancel"/>
            <Switch
                android:id="@+id/switch_day6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sabado"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_view_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cancel"/>
            <Switch
                android:id="@+id/switch_day7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domingo"
                android:padding="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_confirm_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Confirmar"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:textAppearance="@style/Widget.Design.AppBarLayout"
            android:textSize="17dp">

        </Button>

    </LinearLayout>
</LinearLayout>